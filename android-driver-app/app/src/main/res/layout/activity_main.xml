<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:text="خدمة تتبع السائق"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <EditText
      android:id="@+id/inputDriver"
      android:hint="معرف السائق"
      android:inputType="text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp" />

    <EditText
      android:id="@+id/inputTenant"
      android:hint="معرف المستأجر"
      android:inputType="text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp" />

    <EditText
      android:id="@+id/inputToken"
      android:hint="رمز الدخول (JWT)"
      android:inputType="text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp" />

    <Button
      android:id="@+id/btnStart"
      android:text="ابدأ التتبع"
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <Button
      android:id="@+id/btnStop"
      android:text="إيقاف التتبع"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/txtStatus"
      android:text="الخدمة غير فعالة"
      android:textSize="14sp"
      android:layout_marginTop="16dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </LinearLayout>
</ScrollView>
