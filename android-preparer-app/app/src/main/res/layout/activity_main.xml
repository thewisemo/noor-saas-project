<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:text="ماسح الباركود للمجهز"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <EditText
      android:id="@+id/inputToken"
      android:hint="رمز الدخول (JWT)"
      android:inputType="text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp" />

    <TextView
      android:id="@+id/txtBarcode"
      android:text="لم يتم المسح بعد"
      android:textSize="16sp"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <LinearLayout
      android:orientation="horizontal"
      android:layout_marginTop="16dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <Button
        android:id="@+id/btnScan"
        android:text="مسح باركود"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
      <Button
        android:id="@+id/btnRefresh"
        android:text="تحديث البدائل"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
      android:id="@+id/txtStatus"
      android:text="جاهز للمسح"
      android:textSize="14sp"
      android:layout_marginTop="16dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <LinearLayout
      android:id="@+id/listAlternatives"
      android:orientation="vertical"
      android:layout_marginTop="16dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </LinearLayout>
</ScrollView>
