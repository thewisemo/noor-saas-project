{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../shared/src/*"]
    },
    "declaration": false,
    "removeComments": true
  },
  "include": ["src/**/*", "../shared/src/**/*"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
